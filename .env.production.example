# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Analytics (Optional but Recommended)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
NEXT_PUBLIC_PLAUSIBLE_API_HOST=https://plausible.io

# Performance Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=mini-games

# Push Notifications (Optional)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@your-domain.com

# CDN Configuration (Optional)
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=300
REDIS_URL=redis://your-redis-url:6379

# Database Connection Pooling
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Tournament System
NEXT_PUBLIC_ENABLE_TOURNAMENTS=true
TOURNAMENT_PRIZE_POOL_WALLET=your-prize-pool-wallet-address
TOURNAMENT_MIN_PLAYERS=10
TOURNAMENT_MAX_PLAYERS=100

# Leaderboard Configuration
NEXT_PUBLIC_ENABLE_LEADERBOARDS=true
LEADERBOARD_UPDATE_INTERVAL_MS=5000
LEADERBOARD_CACHE_TTL_SECONDS=60
LEADERBOARD_TOP_PLAYERS_COUNT=100

# Achievement System
NEXT_PUBLIC_ENABLE_ACHIEVEMENTS=true
ACHIEVEMENT_NOTIFICATION_ENABLED=true
ACHIEVEMENT_SYNC_INTERVAL_MS=30000

# WebSocket Configuration (for real-time features)
NEXT_PUBLIC_WS_URL=wss://your-project.supabase.co/realtime/v1
WS_HEARTBEAT_INTERVAL_MS=30000

# Social Features
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_TWITTER_HANDLE=@yourgame
NEXT_PUBLIC_DISCORD_INVITE_URL=https://discord.gg/your-invite

# API Rate Limiting Per Feature
LEADERBOARD_API_RATE_LIMIT=60
TOURNAMENT_API_RATE_LIMIT=30
ACHIEVEMENT_API_RATE_LIMIT=20

# Cron Job Secrets
CRON_SECRET_TOKEN=your-secure-cron-token-here

# Third-party Integrations
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Email Service (for tournament notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Mini Games Platform